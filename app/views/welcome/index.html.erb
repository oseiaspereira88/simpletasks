<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

<style>
    *{
        overflow: hidden;
    }
    html,body {
        height: 100%;
    }

    .form-container{
        height:100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f5f5f5;
        padding-bottom: 30%;
    }

    #card-login{
        display: none;
    }

    #card-sign-in{
        display: none;
    }

    form{
        padding-top: 10px;
        font-size: 14px;
        margin-top: 30px;
    }

    .card-title{
        font-weight:300;
    }

    .btn{
        font-size: 14px;
        margin-top:20px;
    }

    .login-form{
        width:330px;
        margin:20px;
    }

    .sign-up{
        text-align:center;
        padding:20px 0 0;
    }

    .alert{
        margin-bottom:-30px;
        font-size: 13px;
        margin-top:20px;
        display: none;
    }
</style>

<div class="row">
  <div class="col-sm-8" style="background-color: #fff; margin: 0; height: 100vh; display:table; position: relative; padding: 0;">
    <nav class="bg-secondary py-1" style="height: 50px;">
      <div class="row" style="height: 40px; width: 100%;">
        <div style="display: table; padding-left: 28px; padding-top: 4px; ">
          <img class="mx-2" src="https://raw.githubusercontent.com/oseiaspereira88/simpletasks/main/logo_task.png" height="32px" width="32px" style=" display: table-cell; text-align: center; vertical-align: middle;">
          <h6 class="my-sm-0" style="color: white; display: table-cell; text-align: center; vertical-align: middle;">
            Simple Tasks</h6>
        </div>
        <div class="col-11">
        </div>
      </div>
    </nav>
    <div class="container px-4" style="background-color: #fff; position:absolute; height: 380px; width: 480px; left:25%; top:45%; margin-left:0; margin-top:-50px;">
      <h3 style="font-size: 36pt">Seja bem vindo ao <%= "#{@appName}"%></h3>
      <%#= link_to "Tarefas", tarefas_path %>
      <p style="font-size: 12pt">Organize o fluxo de trabalho de sua equipe e liste suas tarefas.</p>
    </div>
  </div>
  <div class="col-sm-4" style="background-color: #eef; margin: 0; height: 100vh; position:relative; padding: 0;">
    <nav class="py-2" style="text-align: center;  height: 50px; background-color: #4d5670;">
        <button id="login-button" class="btn btn-primary my-sm-0" onclick="openLoginCard()">Login</button>
        <button id="sign-in-button" class="btn btn-secondary my-sm-0" onclick="openSignInCard()">Sing Up</button>
    </nav>

    <div class="form-container">
      <div id="card-login" class="card login-form">
        <div class="card-body">
          <h3 class="card-title text-center">Realize o login</h3>
          <div class="card-text">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">Email ou senha incorreta.</div>
            <form>
              <div class="form-group">
                <label for="loginInputEmail">Email</label>
                <input type="email" class="form-control form-control-sm" id="loginInputEmail" aria-describedby="emailHelp">
              </div>
              <div class="form-group">
                <label for="loginInputPassword">Senha</label>
                <a onclick="openLoginCard()" style="float:right;font-size:12px;">Esqueceu a senha?</a>
                <input type="password" class="form-control form-control-sm" id="loginInputPassword">
              </div>
              <a type="submit" href="/home" class="btn btn-primary btn-block">Logar</a>
              <div class="sign-up">
                NÃ£o tem uma conta? <a onclick="openSignInCard()">Cadastre-se</a>
              </div>
            </form>
          </div>
        </div>
      </div>

      <div id="card-sign-in" class="card login-form">
        <div class="card-body">
          <h3 class="card-title text-center">Realize seu Cadastro</h3>
          <div class="card-text">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">Incorrect username or password.</div>
            <form>
              <div class="form-group">
                <label for="signInInputName">Nome</label>
                <input type="text" class="form-control form-control-sm" id="signInInputName" aria-describedby="emailHelp">
              </div>
              <div class="form-group">
                <label for="signInInputEmail">Email</label>
                <input type="email" class="form-control form-control-sm" id="signInInputEmail" aria-describedby="emailHelp">
              </div>
              <div class="form-group">
                <label for="signInInputPassword">Senha</label>
                <input type="password" class="form-control form-control-sm" id="signInInputPassword">
              </div>
              <a type="submit" href="/home" class="btn btn-primary btn-block">Cadastrar</a>
            </form>
          </div>
        </div>
      </div>

    </div>

  </div>
</div>

<script>
  window.onload = function (){
      window.setTimeout(function() {
          $("#card-login").slideDown(300);
      }, 600);
  }

  function openLoginCard(){
      $("#card-sign-in").hide(400);
      $("#card-login").slideDown(800);
  }

  function openSignInCard(){
      $("#card-login").hide(400);
      $("#card-sign-in").slideDown(800);
  }
</script>

