<div id="add-form" class="add-container" style="text-align: left; margin-left: 15px; margin-right: 31px; margin-bottom: 30px; margin-top: 15px;">
  <div id="floatButton" class="button" onclick="toggleAddForm()" style="width: 32px; height: 32px; padding: 2px;" href="#">
    <img height="28px" width="28px" src="https://raw.githubusercontent.com/oseiaspereira88/Sverse-Mobile/master/Sverse/src/main/res/drawable/add_button6.png">
  </div>
  <div class="content" style="  float: right; width: 90%;">
    <div class="head" style="padding: 0;">
      <%= form_for @tarefa, remote:true do |f| %>
        <div class="field">
          <%= f.label :titulo, class:"label_form"%><br>
          <%= f.text_field :titulo, class:"text_field"%><br>
          <%= f.label :descricao, class:"label_form"  %><br>
          <%= f.text_area :descricao, class:"text_area" %><br>
          <br><br><strong style="width: auto;">Entrega</strong>
          <%= f.date_field :entrega_date, class:"date_field" %><br>
        </div>
        <div class="actions">
          <%= f.submit "Salvar" %>
        </div>
      <% end %>
    </div>

    <div style="margin-top: 4px; margin: 0; width: 100%; padding-right: 16px; background-color: transparent;" class="body">
      <style>
          textarea {
              scrollbar-width: thin;
              outline: none;
              resize: none;
              /*box-shadow: 0 0 0 4px rgba(121, 189, 143, 0.3);*/
              max-width: 100%;
              width: 404px;
              min-height: 100px;
              max-height: 150px;
              border-radius: 5px;
              padding: 5px;
              border: 1px solid #ffffff;
          }
          textarea:hover, textarea:focus {
              /*box-shadow: 0 0 0 4px rgba(121, 189, 143, 0.5);*/
          }
          textarea::-webkit-scrollbar {
              width: 8px;
          }
          textarea::-webkit-scrollbar-track {
              /*background-color: #f0f0f0;*/
              border-radius: 0 5px 5px 0;
          }
          textarea::-webkit-scrollbar-thumb {
              /*background-color: #588a68;*/
              border-radius: 5px;
          }

      </style>
      <div class="action-bar">
        <strong style="margin-left: 16px;">Anexos</strong><br>
        <section class="greySquaresContainer">
                <span class="greySquare" style="text-align: center; padding-top: 11px; background-color: white;">
                    <div class="btn" onclick="openSelectAnexoFile()" style="width: 38px; margin: 0; height: 38px; padding: 2px;" href="#">
                      <img height="32px" width="32px" src="https://raw.githubusercontent.com/oseiaspereira88/Sverse-Mobile/master/Sverse/src/main/res/drawable/add_button6.png">
                    </div>
                </span>
          <span class="greySquare" style="background-color: white;"></span>
          <span class="greySquare" style="background-color: white;"></span>
          <span class="greySquare" style="background-color: white;"></span>
        </section>
      </div>

      <div class="action-bar" style="text-align: right;">
        <a style="color: #236eae;" href="#">Excluir</a>
        <a onclick="newTarefaSubmit()" href="#" style="color: #236eae;">Salvar</a>
      </div>
    </div>
  </div>
</div>
<style>
    .head h1 {
        font-weight: 700;
        font-size: 64px;
        margin:0;
        padding: 0 20px;
    }
    .head p, .body p {
        font-size: 16px;
        padding: 0 20px;
    }
    em {
        font-style: normal;
        color: #ffc400;
    }
    action-bar a, .head p a {
        font-style: normal;
        color: #ffd740;
        text-decoration: none;
        padding-right: 10px;
        cursor: pointer;
    }
    .sub {
        margin: 0;
    }
    .button {
        cursor: pointer;
        width: 20px;
        height: 20px;

        display: inline-block;
        font-weight: bold;
        transform: rotate(0deg);
        transition: all 0.7s cubic-bezier(0.4, 0, 0.4, -1);
    }
    .expand .button {
        transform: rotate(585deg);
        transition: all 0.8s cubic-bezier(0.4, 0, 0.4, 1);
    }
    .add-container {
        position: relative;
        margin: auto;
        padding: 4px;
        background-color: #e3ecff;
        border-radius: 50%;
        width: 40px;
        max-width: 60px;
        height: 40px;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
        overflow: hidden;
        transition: all 0.5s 0.45s, height 0.2s cubic-bezier(0.4, 0, 0.2, 1) 0.25s, max-width 0.2s cubic-bezier(0.4, 0, 0.2, 1) 0.35s, width 0.2s cubic-bezier(0.4, 0, 0.2, 1) 0.35s;
    }
    .add-container.expand {
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.17);
        width: 100%;
        height: 450px;
        max-width: 100%;
        border-radius: 6px;
        transition: all 0.2s, max-width 0.2s cubic-bezier(0.4, 0, 0.2, 1) 0.1s, height 0.3s ease 0.25s;
    }
    .content {
        transform: translateY(100%);
        width: 100%;
        height: auto;
        opacity: 0;
        text-align: left;
        border-radius: 6px;
        transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.2s 0.2s;
    }
    .expand .content {
        transform: translateY(0px);
        opacity: 1;
        transition: transform 0.7s cubic-bezier(0.4, 0, 0.2, 1) 0.05s, opacity 0s;
    }
    .content .head {
        padding: 0 0 20px 0;
    }
    .content .body {
        color: #000;
        color: rgba(0, 0, 0, 0.87);
        background-color: #fff;
        width: 100%;
        height: 100%;
        padding: 10px 0;
        border-radius: 6px;
        box-sizing: border-box;
    }
    .action-bar {
        padding-left: 15px;
        border-top: 1px solid #e0e0e0;
        width: 100%;
    }
    .action-bar a {
        text-transform: uppercase;
        line-height: 52px;
        color: #ffc400;
    }
    #taskForm{
        margin: 0;
        padding: 0;
        padding-right: 16px;
    }
    .labelForm{
        background-color: transparent; font-weight: bold; color: black; border-top: 0; border-left: 0; border-right: 0; padding-left: 0;
    }
    .date_field{
        background-color: transparent; font-weight: bold; color: black; border-top: 0; border-left: 0; border-right: 0; padding-left: 0; margin-left: 32px; width: auto; float: right;
    }
</style>