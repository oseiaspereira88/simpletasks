<style>
    .card-tarefa {
        margin-top: 24px;
        height: auto;
        width: 100%;
        border-radius: 8px;
        background-color: #fefefe;
        border: none;
        border-color: #cfcfcf;
        /*height: 88px;*/
        overflow: hidden;
        transition: 375ms cubic-bezier(0.4, 0.0, 0.2, 1);
    }

    .cardActive {
        box-shadow: 0 1px 4px rgb(237, 241, 248), 0 1px 4px rgb(164, 198, 255);
        border-style: solid;
        border-width: 1px;
        /*height: 332px;*/

        /*border-width: 1px;*/
    }

    .card-tarefa .nonSharedContent {
        display: none;
    }

    .card-tarefa .cardHeader {
        width: 100%;
        height: 72px;
        padding-top: 16px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.12);
    }

    .cardHeaderTextContainer {
        display: inline-block;
        height: 100%;
        padding-top: 4px;
        width: auto;
    }

    .cardHeaderTitle {
        width: 184px;
        height: 16px;;
        margin-bottom: 16px
    }

    .cardHeaderSupportingText {
        height: 16px;
        width: 136px;
    }

    .cardAvatarContainer {
        display: inline-block;
        margin: 0 16px;
        height: 100%;
        float: left;
    }

    .cardAvatar {
        width: 56px;
        height: 56px;
        border-bottom-right-radius: 50%;
        border-top-right-radius: 50%;
        padding-right: 2px;
        background-color: #2196f2;
        display: inline-block;
    }

    .greySquaresContainer {
        width: 200%;
        padding: 10px;
    }

    .greySquare {
        margin: 8px;
        display: inline-block;
        width: 60px;
        height: 60px;
        background-color: #ededed;
        border-radius: 2px;
    }

    .greyLine {
        width: 100%;
        height: auto;
        margin: 24px 16px;
        background-color: #ededed;
    }

    .greyLine:first-of-type {
        width: 100%;
        height: auto;
        margin: 0 16px;
        border-radius: 6px;
    }
</style>
<% @tarefas.each do |tarefa| %>
  <div class="card-tarefa card">
    <section class="cardHeader" style="padding: 0px 0px 0px 0px; height: auto;">
        <span class="cardAvatarContainer" style="height: auto; margin: 0;">
            <img class="cardAvatar" style="padding: 0; padding-right: 2px; margin: 0; margin-right: 16px;" src="https://raw.githubusercontent.com/oseiaspereira88/simpletasks/main/trabalho%2002.jpg"></img>
        </span>
      <span class="cardHeaderTextContainer" style="width: 80%; height: 100%; padding: 0;">
        <div class="cardHeaderTitle" style="height: auto; padding: 0; margin: 0; width: 100%;">
          <a onclick="toggleCardtarefa(<%= @tarefas.index(tarefa) %>)" style="cursor: pointer"><strong><%= tarefa.titulo -%></strong></a>
        </div>
        <div class="cardHeaderSupportingText" style="height: auto; padding: 0; margin: 0; width: 100%;">
          <%= "#{tarefa.state}" -%> &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp
          Entregar: &nbsp <%= "#{tarefa.entrega_date}" -%>  &nbsp
          <a onclick="toggleEditForm(<%= tarefa.id %>)" style="color: #3e5eb3; cursor: pointer">Editar </a>
          <%= link_to 'Excluir', tarefa, remote:true, method: :delete, data: { confirm: 'Tem certeza?' } -%>
        </div>
      </span>
    </section>

    <div id="edit_task_form<%= tarefa.id %>" style="display: none; padding: 10px; margin: 6px; ">
      <%= form_for tarefa, remote:true do |f| -%>
        <div class="field" style="padding: 6px;">
          <strong>Título</strong><br>
          <%= f.text_field :titulo, value: tarefa.titulo, class:"text_field form-control" -%><br>
          <strong>Descrição</strong><br>
          <%= f.text_area :descricao, value: tarefa.descricao, class:"text_area form-control" -%><br>
          <strong>Entrega</strong>
          <%= f.date_field :entrega_date, value: tarefa.entrega_date, class:"date_field" -%><br>
        </div>
        <div class="actions" style="text-align: right;">
          <button onclick="cancelEditTaskForm()" type="button" class="btn btn-primary" style="width: auto; height: auto; float: right; margin-left: 16px;">Cancelar</button>
          <%= f.submit "Salvar", class:"btn btn-primary right" -%>
        </div>
      <% end %>
    </div>

    <section class="nonSharedContent">
      <div class="greyLine" style="padding: 8px; width: auto; margin-top: 16px;"><strong>Descrição da Tarefa:</strong><br>
        <%= tarefa.descricao -%>
      </div>

      <br><strong style="margin-left: 16px;">Anexos</strong><br>
      <section class="greySquaresContainer">
            <span class="greySquare" style="text-align: center; padding-top: 11px;">
                <div class="button" onclick="openSelectAnexoFile()" style=" width: 38px; height: 38px; padding: 2px;" href="#">
                  <img height="34px" width="34px" src="https://raw.githubusercontent.com/oseiaspereira88/Sverse-Mobile/master/Sverse/src/main/res/drawable/add_button6.png">
                </div>
            </span>
        <span class="greySquare"></span>
        <span class="greySquare"></span>
        <span class="greySquare"></span>
      </section>
      <div class="greyLine" style="background-color: white;">
        <div class="comments-container" style="width: auto; margin-right: 10%;">
          <h6 style="font-size: 18px; height: 22px; padding: 0; margin: 0; float: left; margin-bottom: 8px;">
            <strong>Comentários</strong></h6><br>

          <%= form_for @comentario, remote:true do |f| %>
            <div class="field">
              <%= hidden_field_tag "tarefa_id", tarefa.id %><br>
              <%= f.text_field :texto, id:"inputComentario#{tarefa.id}", class:"form-control", placeholder:"Escreva seu comentário aqui..." %><br>
            </div>
            <div class="actions">
              <%= f.submit "Comentar", class:"btn btn-primary" %>
            </div>
          <% end %>

          <style>
              .actions .btn{
                  float: right; margin: 0; margin-bottom: 3px;
              }
          </style>

          <ul id="comments-list<%=tarefa.id%>" class="comments-list" style="width: auto;">
            <%= render partial: "comentarios/comentario_list", object: [@comentarios, :parent_id => tarefa.id] %>
          </ul>
        </div>

      </div>
      <i onclick="toggleCardtarefa(<%= @tarefas.index(tarefa) %>)" style="cursor: pointer; float: right; margin: 16px;" class="fa fa-reply"></i>
    </section>
  </div>
<% end %>